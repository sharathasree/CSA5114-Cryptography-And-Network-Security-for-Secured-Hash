void permute(uint8_t *in, uint8_t *out, int *table, int n) {
    for (int i = 0; i < n; i++) {
        int bit = table[i] - 1;
        int byte = bit / 8;
        int shift = 7 - (bit % 8);
        out[i/8] |= ((in[byte] >> shift) & 1) << (7 - (i%8));
    }
}

void left_rotate_28(uint32_t *x) {
    *x = ((*x << 1) | ((*x >> 27) & 1)) & 0x0FFFFFFF;
}

uint32_t feistel(uint32_t R, uint8_t *subkey) {
    uint8_t expanded[6] = {0};
    uint8_t s_input[6] = {0};
    uint32_t output = 0;
    uint8_t p_out[4] = {0};

    uint8_t R_bytes[4] = {
        (R >> 24) & 0xFF,
        (R >> 16) & 0xFF,
        (R >> 8) & 0xFF,
        R & 0xFF
    };

    permute(R_bytes, expanded, E_Table, 48);

    for (int i = 0; i < 6; i++)
        s_input[i] = expanded[i] ^ subkey[i];

    uint32_t s_out = 0;
    for (int i = 0; i < 8; i++) {
        int b = (s_input[i/6] >> (6 - (i%6)*6)) & 0x3F;
        int row = ((b & 0x20) >> 4) | (b & 0x01);
        int col = (b >> 1) & 0x0F;
        s_out = (s_out << 4) | Sbox[i][row][col];
    }

    uint8_t s_bytes[4] = {
        (s_out >> 24) & 0xFF,
        (s_out >> 16) & 0xFF,
        (s_out >> 8) & 0xFF,
        s_out & 0xFF
    };

    permute(s_bytes, p_out, P_Table, 32);

    output = (p_out[0] << 24) | (p_out[1] << 16) | (p_out[2] << 8) | p_out[3];
    return output;
}

void generate_subkeys(uint8_t *key, uint8_t subkeys[16][6]) {
    uint8_t pc1_out[7] = {0};
    permute(key, pc1_out, PC1_Table, 56);

    uint32_t C = (pc1_out[0] << 20) | (pc1_out[1] << 12) | (pc1_out[2] << 4) | (pc1_out[3] >> 4);
    uint32_t D = ((pc1_out[3] & 0x0F) << 24) | (pc1_out[4] << 16) |
                 (pc1_out[5] << 8) | pc1_out[6];

    int shifts[16] = {1,1,2,2,2,2,2,2,1,2,2,2,2,2,2,1};

    for (int i=0;i<16;i++) {
        for (int j=0;j<shifts[i];j++) {
            left_rotate_28(&C);
            left_rotate_28(&D);
        }
        uint8_t CD[7] = {
            (C >> 20) & 0xFF,
            (C >> 12) & 0xFF,
            (C >> 4) & 0xFF,
            ((C & 0x0F) << 4) | ((D >> 24) & 0x0F),
            (D >> 16) & 0xFF,
            (D >> 8) & 0xFF,
            D & 0xFF
        };
        memset(subkeys[i], 0, 6);
        permute(CD, subkeys[i], PC2_Table, 48);
    }
}

void DES(uint8_t *block, uint8_t *key, int mode) {
    uint8_t subkeys[16][6];
    generate_subkeys(key, subkeys);

    uint8_t ip_out[8]={0};
    permute(block, ip_out, IP_Table, 64);

    uint32_t L = (ip_out[0] << 24) | (ip_out[1] << 16) | (ip_out[2] << 8) | ip_out[3];
    uint32_t R = (ip_out[4] << 24) | (ip_out[5] << 16) | (ip_out[6] << 8) | ip_out[7];

    for (int i=0;i<16;i++) {
        uint32_t temp = R;
        if (mode==0) R = L ^ feistel(R, subkeys[i]);
        else R = L ^ feistel(R, subkeys[15-i]);
        L = temp;
    }

    uint8_t preout[8] = {
        (R >> 24) & 0xFF, (R >> 16) & 0xFF, (R >> 8) & 0xFF, R & 0xFF,
        (L >> 24) & 0xFF, (L >> 16) & 0xFF, (L >> 8) & 0xFF, L & 0xFF
    };

    uint8_t final[8]={0};
    permute(preout, final, IP_1_Table, 64);
    memcpy(block,final,8);
}

int main() {
    uint8_t block[8] = {'T','E','S','T','D','E','S','!'};
    uint8_t key[8]   = {0x13,0x34,0x57,0x79,0x9B,0xBC,0xDF,0xF1};

    printf("Plaintext:  ");
    for(int i=0;i<8;i++) printf("%02X ", block[i]); printf("\n");

    DES(block, key, 0);

    printf("Encrypted:  ");
    for(int i=0;i<8;i++) printf("%02X ", block[i]); printf("\n");

    DES(block, key, 1);

    printf("Decrypted:  ");
    for(int i=0;i<8;i++) printf("%02X ", block[i]); printf("\n");

    return 0;
}
