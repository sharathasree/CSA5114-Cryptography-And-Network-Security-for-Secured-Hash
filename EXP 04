#include <stdio.h>
#include <ctype.h>
#include <string.h>

void vigenereEncrypt(char text[], char key[]) {
    int n = strlen(key);
    for (int i = 0, j = 0; text[i]; i++) {
        char c = text[i];

        if (isalpha(c)) {
            char k = toupper(key[j % n]) - 'A';   
            if (isupper(c))
                c = ((c - 'A' + k) % 26) + 'A';
            else
                c = ((c - 'a' + k) % 26) + 'a';

            j++; 
        }
        text[i] = c;
    }
}

int main() {
    char text[200], key[50];

    printf("Enter plaintext: ");
    fgets(text, sizeof(text), stdin);

    printf("Enter key: ");
    scanf("%s", key);

    vigenereEncrypt(text, key);

    printf("\nEncrypted text: %s\n", text);

    return 0;
}
