#include <stdio.h>
#include <string.h>
int PC1[56] = {
    57,49,41,33,25,17,9,
    1,58,50,42,34,26,18,
    10,2,59,51,43,35,27,
    19,11,3,60,52,44,36,
    63,55,47,39,31,23,15,
    7,62,54,46,38,30,22,
    14,6,61,53,45,37,29,
    21,13,5,28,20,12,4
};
int PC2[48] = {
    14,17,11,24,1,5,
    3,28,15,6,21,10,
    23,19,12,4,26,8,
    16,7,27,20,13,2,
    41,52,31,37,47,55,
    30,40,51,45,33,48,
    44,49,39,56,34,53,
    46,42,50,36,29,32
};
int shifts[16] = {
    1,1,2,2,2,2,2,2,
    1,2,2,2,2,2,2,1
};
void leftShift(int *arr, int size, int n) {
    while (n--) {
        int temp = arr[0];
        for (int i = 0; i < size - 1; i++)
            arr[i] = arr[i+1];
        arr[size-1] = temp;
    }
}

void generateDESKeys(unsigned char key[8]) {
    int i, j;

    int key56[56];
    int C[28], D[28];
    int roundKey[48];
    int CD[56];

    int encKeys[16][48];
    int decKeys[16][48];

    printf("\n=== DES Encryption and Decryption Key Generation ===\n");
    for (i = 0; i < 56; i++) {
        int bit = (key[(PC1[i] - 1) / 8] >> (7 - ((PC1[i] - 1) % 8))) & 1;
        key56[i] = bit;
    }
    memcpy(C, key56, 28 * sizeof(int));
    memcpy(D, key56 + 28, 28 * sizeof(int));

    for (i = 0; i < 16; i++) {
        leftShift(C, 28, shifts[i]);
        leftShift(D, 28, shifts[i]);
        memcpy(CD, C, 28 * sizeof(int));
        memcpy(CD + 28, D, 28 * sizeof(int));
        for (j = 0; j < 48; j++)
            encKeys[i][j] = CD[PC2[j] - 1];
    }
    for (i = 0; i < 16; i++) {
        memcpy(decKeys[i], encKeys[15 - i], 48 * sizeof(int));
    }
    printf("\nEncryption Keys (K1 to K16):\n");
    for (i = 0; i < 16; i++) {
        printf("K%-2d : ", i + 1);
        for (j = 0; j < 48; j++) printf("%d", encKeys[i][j]);
        printf("\n");
    }

    printf("\nDecryption Keys (K16 to K1):\n");
    for (i = 0; i < 16; i++) {
        printf("K%-2d : ", i + 1);
        for (j = 0; j < 48; j++) printf("%d", decKeys[i][j]);
        printf("\n");
    }
}

int main() {
    unsigned char key[8] = {
        0x13, 0x34, 0x57, 0x79,
        0x9B, 0xBC, 0xDF, 0xF1
    };

    generateDESKeys(key);

    return 0;
}
