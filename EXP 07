#include <stdio.h>
#include <string.h>
#include <ctype.h>

#define MAXC 256
char substitute(char c, char map[]) {
    if (map[(unsigned char)c] != 0)
        return map[(unsigned char)c];
    return c;  // return ciphertext char if unmapped
}

int main() {
    char ciphertext[] =
"53‡‡†305))6*;4826)4‡.)4‡);806*;48†8¶60))85;;]8*;:‡*8†83 (88)5*†;46(;88*96*?;8)*‡(;485);5*†2:*‡(;4956*2(5*—4)8¶8*"
";4069285);)6†8)4‡‡;1(‡9;48081;8:8‡1;48†85;4)485†528806*81 (‡9;48;(88;4(‡?34;48)4‡;161;:188;‡?;";
    
    int freq[MAXC] = {0};
    int n = strlen(ciphertext);
    for (int i = 0; i < n; i++) {
        unsigned char c = ciphertext[i];
        freq[c]++;
    }
    printf("Character frequencies:\n");
    for (int i = 0; i < MAXC; i++) {
        if (freq[i] > 0)
            printf("'%c' (ASCII %d): %d\n", isprint(i) ? i : '?', i, freq[i]);
    }
    char map[MAXC] = {0};
    map['8'] = 'E';
    map[';'] = 'T';
    map['4'] = 'H';
    map['5'] = 'A';
    map['3'] = 'G';
    map['0'] = 'O';
    map['6'] = 'D';
    map['*'] = 'S';
    map[')'] = 'I';
    map['†'] = 'N';
    map['‡'] = 'L';
    map['2'] = 'R';
    map[':'] = 'B';
    map['?'] = 'F';
    map['9'] = 'M';
    map['1'] = 'Y';
    map['('] = 'C';
    map['¶'] = 'U';
    map[']'] = 'W';
    map['—'] = 'K';
    printf("\nDecrypted text:\n");
    for (int i = 0; i < n; i++) {
        putchar(substitute(ciphertext[i], map));
    }
    printf("\n");

    return 0;
}
