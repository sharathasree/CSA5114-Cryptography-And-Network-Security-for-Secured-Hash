#include <stdio.h>
#include <ctype.h>

int gcd(int a, int b) {
    while (b != 0) {
        int t = b;
        b = a % b;
        a = t;
    }
    return a;
}

int main() {
    int a, b;
    char text[200];

    printf("Enter plaintext: ");
    fgets(text, sizeof(text), stdin);

    printf("Enter a value (must be coprime with 26): ");
    scanf("%d", &a);

    printf("Enter b value (0â€“25): ");
    scanf("%d", &b);

    if (gcd(a, 26) != 1) {
        printf("Error: 'a' must be coprime with 26.\n");
        return 1;
    }

    printf("Encrypted text: ");
    for (int i = 0; text[i]; i++) {
        char c = text[i];
        if (isalpha(c)) {
            int p = toupper(c) - 'A';
            int enc = (a * p + b) % 26;
            putchar(enc + (isupper(c) ? 'A' : 'a'));
        } else {
            putchar(c);
        }
    }
    printf("\n");
    return 0;
}
